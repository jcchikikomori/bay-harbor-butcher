# Stable Diffusion Uncensored - Environment Variables
# Copy this file to .env and customize the values as needed
SD_PROMPT="a photo of an astronaut riding a horse on mars"
SD_NEGATIVE_PROMPT="low quality, blurry, bad anatomy, bad hands, text, error, missing fingers, extra digit, fewer digits, cropped, worst quality, low quality"
SD_IMAGE_HEIGHT=512
SD_IMAGE_WIDTH=512
SD_MODEL="runwayml/stable-diffusion-v1-5"
SD_STRENGTH=0.7
SD_GUIDANCE_SCALE=7.5
SD_NUM_INFERENCE_STEPS=50

# Pipeline Configuration
# Use AutoPipelineForText2Image instead of standard pipeline (true/false)
SD_USE_AUTO_PIPELINE=false

# Torch Data Type (optional)
# Options: float16 (default for GPU), float32 (default for CPU), bfloat16
# Some models like FLUX recommended bfloat16 for better quality
# SD_TORCH_DTYPE="bfloat16"

# LoRA Weights (optional)
# Supports both local paths and HuggingFace model IDs
# Local example: "./loras/my_style"
# HuggingFace example: "ostris/OpenXL-LoRA-library"
# SD_LORA_PATH="./loras/my_style"

# Specific weight file name in the LoRA (optional)
# SD_LORA_WEIGHT_NAME="pytorch_lora_weights.safetensors"

# Adapter name (optional - for managing multiple LoRAs)
# SD_LORA_ADAPTER_NAME="custom_style"

# HuggingFace Authentication (for gated models)
# Skip HuggingFace login (set to 1 if using public models only or in CI/CD)
HF_SKIP_LOGIN=0

# Option 1: Set token directly from https://huggingface.co/settings/tokens
# HF_TOKEN="hf_your_token_here"

# Option 2: Browser login (default if HF_TOKEN not set)
# Leave HF_TOKEN blank and the app will open your browser to authenticate